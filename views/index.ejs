<h1>Student list</h1>

<form action="/create" method="POST">
  <p>
    <label for="item">Name: </label>
    <input type="text" name="item" placeholder="new student" autofocus required >
    <br><br>
    <button type="text" >Add Student</button> 
  </p> 
</form>

<form action="/remove_all/<%= students %>?_method=DELETE" method="POST">
  <input type="submit" value="Delete list" >
</form>



<% students.forEach(function(student) { %>
  <p>
    <form action="/remove/<%= student %>?_method=DELETE" method="POST" >
     <input type="submit" value="X" > <%= student %>  
    </form>
  
  </p>
<% }); %>